{% extends 'Ma27JiraIssueVoteBundle::layout.html.twig' %}
{% block body %}
<div class="container row" style="margin-top: 20px;">
    <div class="col-md-8 col-md-offset-3">
        <div class="panel panel-default">
            <div class="panel-body">
                <h4>Custom settings</h4>
                <form action="{{ url('ma27_jira_issue_vote_settings') }}" method="post">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="disable_voted_issues"{% if disable_voted_issues == true %} checked="checked"{% endif %} /> Hide voted issues in Jira-Vote
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="disable_reported_issues"{% if disable_reported_issues == true %} checked="checked"{% endif %} /> Hide reported issues in Jira-Vote
                        </label>
                    </div>
                    <button type="submit" name="submit" class="btn btn-primary">Save</button>
                    <a href="{{ url('ma27_jira_issue_vote_homepage') }}" class="btn btn-info" style="margin-left: 15px">Go Back</a>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block title %}Settings{% endblock %}